<center>
  <form action="/board/post?NUM=<%= results.NUM %>" method="POST" style="margin-top: 80px;">

  <a href="/board/update"><input type="button" value="수정" style="margin-bottom: 10px;"></a>
  
    <table>
    <th>타이틀</th>
    <tr>
        <td>콘텐츠</td>
    </tr>
  </table>
  <br>
  </form>


<td>
  <form action="/board/comment" method="POST">
      <input type="hidden" name="author">
      <input type="hidden" name="description">
      <input type="hidden" name="title">
      <input type="hidden" name="n_id">
      <textarea name="comment" cols="40" rows="5"></textarea>
      <input type="submit">
  </form>
</td>
</center>
